<h1><%= t :edit, :scope => :user %></h1>

<%= title t(:edit, :scope => [:user]) %>

<% form_for @user, :html => {:class => "basic-form rounded large"} do |f| %>

  <%= error_messages_for :user, :class =>"alert red error rounded-8" %>

<div class="rounded-8">
  <%= render :partial => "user_form", :locals => {:f => f} %>

  <%= awesome_submit_button t(:save, :scope => :form), :edit %>
</div>

<% end %>

<% content_for :navigation do %>
  <% render :layout => "layouts/main_navigation" do %>
    <li class="selected tab-separator" ><%= link_to @user.username, edit_user_url(@user) %></li>
  <% end %>
<% end %>