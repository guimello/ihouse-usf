<% description ||= false %>

<table id="projects_table" style="margin-top: 15px; margin-bottom: 40px" class="basic-table fluid clear">
  <thead>
    <tr>
      <th class="left" style='width: 100px'><%= t :house, :count => 1 %></th>
      <% if description %>
        <th style='width: 50%'><%= t :label, :scope => [:house, :description] %></th>
      <% end %>
      <th style="width: 150px"><%= t :last_activity %></th>
      <th style="width: 50px"></th>
    </tr>
  </thead>
  <tbody>
  <% for house in houses %>
    <tr>
      <td class="left"><%= link_to h(house.name), user_house_url(current_user, house), :class => 'title-me', :title => h(house.name) %></td>
      <% if description %>
      <td><%= h house.description %></td>
      <% end %>
      <td><%= distance_of_time_in_words_to_now house.updated_at %>&nbsp;<%= t :ago %></td>
      <td class="center">
        <%= link_to t(:destroy, :scope => :house), user_house_url(current_user, house), :class => "icon cross title-me", :title => t(:destroy, :scope => :house), :confirm => t(:destroy, :scope => [:house, :hints]), :method => :delete %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>