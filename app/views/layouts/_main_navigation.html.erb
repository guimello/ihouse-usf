<ul id="left-tabs" class="tabs">
	<li <%= "class='selected'" if controller.controller_name == "site" and controller.action_name == "index" %>>
		<%= link_to t(:home, :scope => [:navigation]), root_url %>
	</li>

	<li <%= "class='selected'" if controller.controller_name == "houses" and controller.action_name == "index" %>>
		<%= link_to t(:my_houses, :scope => [:house]), user_houses_url(current_user) %>
	</li>

        
	<%= yield if yield %>
</ul>

<ul id="right-tabs" class="tabs">
  
  <li <%= "class='selected'" if controller.controller_name == "users" and ["my_panel"].include? controller.action_name %>>
    <%= link_to t(:my_panel, :scope => :user), my_panel_url %>
  </li>

  <li <%= "class='selected'" if controller.controller_name == "houses" and ["new", "create"].include? controller.action_name %>>
    <%= link_to t(:new, :scope => :house), new_user_house_url(current_user) %>
  </li>
</ul>