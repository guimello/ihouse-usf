<% show_house ||= false %>
<table style="margin-top: 15px; margin-bottom: 40px" class="basic-table fluid clear">
  <thead>
    <tr>
      <% if show_house %>
        <th class="left"><%= t :house, :count => 1 %></th>
      <% end %>
      <th <%= "class='left' style='width: 80px'" unless show_house %> > <%= t(:device, :count => 1).humanize %></th>
      <th class=""><%= t(:action, :count => 1).humanize %></th>
      <th class=""><%= t :message %></th>
      <th class="" style=""></th>
    </tr>
  </thead>
  <tbody>
  <% action_logs.each do |log| %>
    <tr class="<%= cycle("even", "odd") %>">
      <% if show_house %>
        <td class="left"><%= h log.loggable.device.house.to_s.humanize %></td>
      <% end %>
      <td <%= "class='left'" unless show_house %> ><%= h(log.loggable.device.to_s) %></td>
      <td class=""><%= h(log.loggable.to_s) %></td>
      <td class=""><%= h(log.custom.message) %></td>
      <td class="right"><%= distance_of_time_in_words_to_now log.created_at %>&nbsp;<%= t(:ago).downcase %></td>
    </tr>
  <% end %>
  </tbody>
</table>