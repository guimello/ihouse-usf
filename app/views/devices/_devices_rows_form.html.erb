<tr id="device_<%= form.object.id %>" class="<%= cycle("even", "odd") %>" style="display: <%= form.object._destroy ? 'none' : ''%>" >  
  <td class="left">
    <div>
      <div class="float-left pointer-me device-icon icon <%= form.object.display_icon %>">&nbsp;</div>        
      <% form.fields_for :custom, form.object.custom do |custom_form| %>
        <%= custom_form.hidden_field :display_icon, :class => "hidden-device-icon" %>
      <% end %>
      <%= text_field_for_device form, :device_class, :class => "smallest enable-disable-advanced search-for-known-device" %>
      <div class="clear"></div>
    </div>
  </td>
  <td>
    <%= text_field_for_device form, :identification, :class => "small enable-disable-advanced identification-field" %>
  </td>
  <td>
    <%= text_field_for_device form, :name, :class => "small name-field", :value => (form.object.name.blank?) ? form.object.default_name : form.object.name %>
  </td>  
  <td>
    <%= text_field_for_device form, :room, :class => "small room-field" %>
  </td>
  <td>
    <%= awesome_button t(:advanced), "edit", :class => "blue smallest edit-special-fields-on-device title-me", :title => t(:enable_advanced, :scope => [:device, :hints]) %>
  </td>
  <td>
    <%= form.hidden_field :_destroy, :class => "remove-device-hidden" %>
    <%= awesome_button t(:remove, :scope => :form), :cross, :confirm_message => t(:remove, :scope => [:form, :hints]), :class => "red smallest #{(form.object.new_record?) ? 'remove-new-device' : 'remove-existing-device'}" %>
  </td>
</tr>
