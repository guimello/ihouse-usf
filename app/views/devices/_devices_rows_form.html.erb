<tr id="device_<%= form.object.id %>">  
  <td class="left">
      <%= icon_for_device form.object %>
      <%= form.text_field :name, :class => "small", :value => (form.object.name.blank?) ? form.object.default_name : form.object.name %>
  </td>
  <td>
    <%= form.text_field :room, :class => "small" %>
  </td>
  <td>
    <%= text_field_for_device form, :identification, :class => "small enable-disable-advanced" %>
  </td>  
  <td>
    <%= text_field_for_device form, :query_state, :class => "small enable-disable-advanced" %>
  </td>
  <td>
    <%= awesome_button t(:advanced), "edit", :class => "blue smallest edit-special-fields-on-device" %>
  </td>
  <td>
    <%= form.hidden_field :_delete, :class => "remove-device-hidden" %>
    <%= awesome_button t(:remove, :scope => :form), :cross, :confirm_message => t(:remove, :scope => [:form, :hints]), :class => "red smallest #{(form.object.new_record?) ? 'remove-new-device' : 'remove-existing-device'}" %>
  </td>
</tr>